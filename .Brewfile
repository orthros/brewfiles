# vim: syntax=ruby filetype=ruby
tap 'caskroom/cask'
tap 'homebrew/bundle'
tap 'homebrew/core'

# System tools
brew 'coreutils', args: ['force-bottle']
brew 'proctools', args: ['force-bottle']
brew 'findutils', args: ['with-default-names', 'force-bottle']
